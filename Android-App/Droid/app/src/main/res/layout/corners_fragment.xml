<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- TODO: Corners -->
            <LinearLayout
                android:id="@+id/layout_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include android:id="@+id/toolbar_actionbar"
                    layout="@layout/toolbar_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/corners_text"
                    android:textSize="30sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@mipmap/corners_inside"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:src="@mipmap/corners_outside"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                </LinearLayout>
                </HorizontalScrollView>

                <RadioGroup
                    android:id="@+id/corners_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/corners_inside"
                        android:text="@string/corners_inside"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/corners_outside"
                        android:text="@string/corners_outside"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/corners_quantity"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:layout_gravity="start"/>

                    <TextView
                        android:text="@string/fractions"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_toRightOf="@+id/corners_quantity"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/corners_length"
                        android:hint="@string/length"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:layout_gravity="start"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/corners_length_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/corners_length"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/corners_width"
                        android:hint="@string/width"
                        android:inputType="number"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/corners_width_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/corners_width"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/corners_height"
                        android:hint="@string/height"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/corners_height_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/corners_height"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/corners_notes"
                    android:hint="@string/optional_notes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <AutoCompleteTextView
                        android:id="@+id/corners_color"
                        android:hint="@string/color"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                <AutoCompleteTextView
                        android:id="@+id/corners_material"
                        android:hint="@string/material"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/corners_submitB"
                        android:text="@string/orderform_addToOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>