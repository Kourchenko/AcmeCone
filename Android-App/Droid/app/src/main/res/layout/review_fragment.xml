<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_100"
    android:weightSum="1">

                <!-- STOCK -->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/review_title_stock"
                        android:text="@string/Stock"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_stock"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"/>


                </LinearLayout>

                <!-- CONES -->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_cone"
                        android:text="@string/Cones"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_cones"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true" />

                </LinearLayout>


                <!-- CORNERS -->

                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title"
                        android:text="@string/Corners"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_corners"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>

                <!-- PIPES -->

                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_pipes"
                        android:text="@string/Pipe_Wraps"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_pipes"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>


                <!-- DROPS -->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_drops"
                        android:text="@string/Drop_Scuppers"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_drops"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>

                <!-- SCUPPERS -->

                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_scuppers"
                        android:text="@string/Scuppers"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_scuppers"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>

                <!-- PANS -->

                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_pans"
                        android:text="@string/Pitch_Pans"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_pans"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>


                <!-- TUBES -->
                <LinearLayout
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_title_tubes"
                        android:text="@string/Tube_Wraps"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <ListView
                        android:id="@+id/review_list_view_tubes"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true" />

                </LinearLayout>
</LinearLayout>