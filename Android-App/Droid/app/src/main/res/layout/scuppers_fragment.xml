<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Pipes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderform_scuppers"
                android:text="@string/custom_scuppers"
                android:textSize="30sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@mipmap/thruwall_four"
                        android:contentDescription="@string/app_name"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:src="@mipmap/thruwall_six"
                        android:contentDescription="@string/app_name"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <ImageView
                        android:src="@mipmap/thruwall_overflow"
                        android:contentDescription="@string/app_name"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/scupper_quantity"
                    android:hint="@string/quantity"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            <TextView
                android:text="@string/fractions"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_toRightOf="@+id/scupper_quantity"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/scuppers_width"
                    android:hint="@string/width"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/scuppers_width_frac"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/scuppers_height"
                    android:hint="@string/height"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/scuppers_height_frac"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/scuppers_depth"
                    android:hint="@string/depth"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/scuppers_depth_frac"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/scuppers_flange"
                    android:hint="@string/flange"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/scuppers_flange_frac"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <EditText
                android:id="@+id/scuppers_notes"
                android:hint="@string/scuppers_notes"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <AutoCompleteTextView
                android:id="@+id/scuppers_color"
                android:hint="@string/color"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:id="@+id/scuppers_material"
                android:hint="@string/material"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/scuppers_submitB"
                android:text="@string/orderform_addToOrder"
                android:padding="20dp"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>