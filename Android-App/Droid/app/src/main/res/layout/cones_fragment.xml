<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_centerInParent="true" >
    <!-- TODO: Cones -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderform_cone"
                    android:text="@string/custom_cones"
                    android:textSize="30sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@mipmap/cones_short_a"
                            android:layout_width="150dp"
                            android:layout_height="150dp" />

                        <ImageView
                            android:src="@mipmap/cones_acone"
                            android:layout_width="150dp"
                            android:layout_height="150dp" />

                        <ImageView
                            android:src="@mipmap/cones_bcone"
                            android:layout_width="150dp"
                            android:layout_height="150dp" />
                        <ImageView
                            android:src="@mipmap/cones_ccones"
                            android:layout_width="150dp"
                            android:layout_height="150dp" />

                        <ImageView
                            android:src="@mipmap/cones_dcone"
                            android:layout_width="150dp"
                            android:layout_height="150dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <RadioGroup
                    android:id="@+id/cones_radioB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/cones_split"
                        android:text="@string/Split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/cones_nonsplit"
                        android:text="@string/Non_Split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cones_quantity"
                        android:hint="@string/quantity"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/fractions"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_toRightOf="@+id/cones_quantity"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cones_top"
                        android:hint="@string/top_diameter"
                        android:inputType="number"
                        android:gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/cones_top_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cones_bottom"
                        android:hint="@string/bot_diameter"
                        android:inputType="number"
                        android:gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:id="@+id/cones_bottom_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cones_height"
                        android:hint="@string/height"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/cones_height_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/cones_flange"
                        android:hint="@string/flange"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/cones_flange_frac"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/cones_notes"
                    android:hint="@string/optional_notes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <AutoCompleteTextView
                    android:id="@+id/cones_color"
                    android:hint="@string/color"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <AutoCompleteTextView
                    android:id="@+id/cones_material"
                    android:hint="@string/material"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/cones_submitB"
                    android:text="@string/orderform_addToOrder"
                    android:layout_gravity="right|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
</LinearLayout>